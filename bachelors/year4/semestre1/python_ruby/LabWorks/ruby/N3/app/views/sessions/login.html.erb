<% @page_title = t :login_pagen %>
<div class="Sign_Form">
  <h1><%= t :log_in %></h1>
  <%= form_tag(:action => 'login_attempt') do %>
      <p>
        <%= label_tag t(:username_or_email) %><br/>
        <%= text_field_tag :username_or_email %>
      </p>
      <p>
        <%= label_tag t(:login_password) %><br/>
        <%= password_field_tag :login_password %>
      </p>
      <%= submit_tag(t :log_in_submit) %>
  <% end %>
</div>
