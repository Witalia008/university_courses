

<h1>Listing Banners</h1>

<table>
  <thead>
    <tr>
      <th>Link</th>
      <th>Image link</th>
      <th>Width</th>
      <th>Height</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @banners.each do |banner| %>
      <tr>
        <td><a href="<%= banner.link %>"/><%= banner.link %></a></td>
        <td><a href="<%= banner.image_link %>"><%= banner.image_link %></a></td>
        <td><%= banner.width %></td>
        <td><%= banner.height %></td>
        <td><%= banner.priority %></td>
        <td><%= link_to 'Show', banner %></td>
        <td><%= link_to 'Edit', edit_banner_path(banner) %></td>
        <td><%= link_to 'Destroy', banner, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Banner', new_banner_path %>
