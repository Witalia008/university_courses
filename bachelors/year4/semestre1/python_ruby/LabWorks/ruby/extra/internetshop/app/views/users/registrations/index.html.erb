

<h1>Listing Users</h1>

<h2>Customers</h2>
<table>
  <thead>
  <tr>
    <th>email</th>
    <th>Full name</th>
    <% if is_admin %>
      <th colspan="3"></th>
    <% elsif signed_in? %>
      <th colspan="2"></th>
    <% else %>
      <th colspan="1"></th>
    <% end %>
  </tr>
  </thead>

  <tbody>
  <% @customers.each do |user|%>
    <tr>
      <td><%= user.email %></td>
      <td><%= user.customer.full_name %></td>
      <td><%= link_to 'Show', user_path(user.id) %></td>
      <% if signed_in? %>
        <td><%= link_to 'Message', user_new_message_path(user) %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

